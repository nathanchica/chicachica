{
    "name": "chica-chica-terminal",
    "version": "0.1.0",
    "description": "Terminal chat client built with Ink",
    "type": "module",
    "bin": {
        "chicachat": "dist/cli.js"
    },
    "scripts": {
        "dev": "tsx src/cli.tsx",
        "dev:watch": "tsx watch --clear-screen=false src/cli.tsx",
        "build": "tsup",
        "start": "node dist/cli.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\""
    },
    "keywords": [
        "chat",
        "terminal",
        "cli",
        "ink",
        "websocket"
    ],
    "dependencies": {
        "fuse.js": "^7.1.0",
        "ink": "^6.3.0",
        "ink-select-input": "^6.2.0",
        "ink-spinner": "^5.0.0",
        "ink-text-input": "^6.0.0",
        "react": "^19.1.1",
        "socket.io-client": "^4.8.1",
        "zod": "^4.1.8",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@types/node": "^24.3.3",
        "@types/react": "^19.1.13",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    }
}
