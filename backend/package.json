{
    "name": "chica-chica-api",
    "version": "1.0.0",
    "description": "Chat app backend with Express and Socket.io",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "typecheck": "tsc --noEmit",
        "db:init": "tsx src/db/init.ts",
        "db:inspect": "tsx src/db/inspect.ts"
    },
    "dependencies": {
        "@neondatabase/serverless": "^1.0.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "socket.io": "^4.8.1",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.1",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    }
}
