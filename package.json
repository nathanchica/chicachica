{
    "name": "chica-chica-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "frontend",
        "backend",
        "terminal-client"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:backend": "npm run dev --workspace=backend",
        "dev:terminal": "npm run dev --workspace=chica-chica-terminal",
        "build": "npm run build:backend && npm run build:frontend && npm run build:terminal",
        "build:frontend": "npm run build --workspace=frontend",
        "build:backend": "npm run build --workspace=backend",
        "build:terminal": "npm run build --workspace=chica-chica-terminal",
        "start": "npm run start --workspace=backend",
        "start:terminal": "npm run start --workspace=chica-chica-terminal",
        "lint": "eslint . --fix",
        "lint:check": "eslint .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "npm run typecheck:backend && npm run typecheck:frontend && npm run typecheck:terminal",
        "typecheck:backend": "npm run typecheck --workspace=backend",
        "typecheck:frontend": "npm run typecheck --workspace=frontend",
        "typecheck:terminal": "npm run typecheck --workspace=chica-chica-terminal",
        "prepare": "husky || true"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "tsc-files": "^1.1.4",
        "typescript": "^5.7.3"
    },
    "lint-staged": {
        "frontend/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "bash -c 'cd frontend && npx tsc-files --noEmit'"
        ],
        "backend/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "bash -c 'cd backend && npx tsc-files --noEmit'"
        ],
        "terminal-client/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "bash -c 'cd terminal-client && npx tsc-files --noEmit'"
        ],
        "**/*.{js,jsx}": [
            "prettier --write",
            "eslint --fix --max-warnings=0 --no-warn-ignored"
        ],
        "**/*.{css,md,json,yml,yaml}": [
            "prettier --write"
        ]
    }
}
